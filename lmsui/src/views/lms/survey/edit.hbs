<div class="card card-form">
    <div class="row no-gutters">
        <div class="col-lg-4 card-body">
            <p><strong class="headings-color">Survey Information</strong></p>
            <p class="text-muted mb-0">Edit {{list.title}}</p>
        </div>
        <div class="col-lg-8 card-form__body card-body">

            <form>
                <div class="form-group">
                    <label for="title"></label>Title</label>
                    <input id="title" type="text" class="form-control" placeholder="title" value="{{list.title}}">
                </div>
                <input type="hidden" id="omg" name="custId" value="{{list.id}}">

                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea id="description" rows="4" class="form-control" placeholder="description ...">{{list.description}}</textarea>
                </div>
                <div class="form-group">
                    <label for="status">Status</label><br />
                    <select id="status" class="custom-select w-auto">
                            {{#if list.status }}
                                     <option value="{{list.status}}">Active</option>
                                      <option value="0">Inactive</option>
                                       {{else}}

                                      <option value="{{list.status}}">Inactive</option>
                                       <option value="1">Active</option>
                                    {{/if}}
                    </select>
                    <small class="form-text text-muted">If active the survey will be visible</small>
                </div>
                <div class="text-right mb-5">
                    <button class="btn btn-success" id="updatesurvey" type="button">Submit form</button>
                </div>

            </form>


        </div>
    </div>
</div>